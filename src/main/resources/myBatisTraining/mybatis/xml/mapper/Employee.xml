<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qat.employee.domain.employee.BAR.mapper.EmployeeMapper">

  <!-- mapping between table columns and object fields -->
  <resultMap id="employeeResultType" type="com.qat.employee.domain.employee.model.Employee">
    <result property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="phone" column="phone"/>
    <result property="email" column="email"/>
  
  </resultMap>

  <!--  INSERT-->
  <insert id="insertEmployee" parameterType="com.qat.employee.domain.employee.model.Employee"
    useGeneratedKeys="true" keyColumn="id" keyProperty="id">
    INSERT INTO EMPLOYEE
      (NAME, PHONE, EMAIL, BRANCH)
    VALUES (#{name}, #{phone}, #{email}, #{branch})
  </insert>
  <insert id="insertEmployeeList" parameterType="java.util.List"
    useGeneratedKeys="true" keyColumn="id" keyProperty="id">
    INSERT INTO EMPLOYEE
    (NAME, PHONE, EMAIL, BRANCH)
    VALUES
    <foreach collection="list" item="employee" index="index" open="(" separator="),("  close=")">
      #{employee.name},
      #{employee.phone},
      #{employee.email},
      #{employee.branch}
    </foreach>
  </insert>

  <!--  SELECT-->
  <select id="fetchByIdEmployee" resultType="com.qat.employee.domain.employee.model.Employee">
    SELECT (NAME, PHONE, EMAIL, BRANCH) FROM employee WHERE id = #{id}
  </select>
  <select id="fetchAllEmployee" resultType="com.qat.employee.domain.employee.model.Employee" resultSetType="FORWARD_ONLY">
    SELECT (NAME, PHONE, EMAIL, BRANCH) FROM employee
  </select>

  <!--  UPDATE-->
  <update id="updateEmployee" parameterType="com.qat.employee.domain.employee.model.Employee">
    UPDATE employee SET NAME = #{name}, PHONE = #{phone}, EMAIL = #{email}, BRANCH = #{branch} WHERE id = #{id}
  </update>

  <!--  DELETE-->
  <delete id="deleteEmployee" parameterType="com.qat.employee.domain.employee.model.Employee">
    DELETE FROM employee WHERE id = #{id}
  </delete>
</mapper>
